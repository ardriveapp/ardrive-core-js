{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist/web-temp",
		"rootDir": "./src",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["src/web/**/*"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
