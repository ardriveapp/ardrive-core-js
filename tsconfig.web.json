{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "es2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.ts", "**/*.spec.ts", "src/ardrive.ts", "src/ardrive_factory.ts", "src/jwk_wallet.ts", "src/wallet_dao.ts"]
}
