{
	"compilerOptions": {
		"target": "es6",
		"module": "CommonJS",
		"declaration": true,
		"moduleResolution": "node",
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		/* Additional Checks */
		"pretty": true,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src", "tests"]
}
